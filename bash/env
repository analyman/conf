#!/usr/bin/env bash

# env part

#{ PATH
export PATH=${PATH}:./:~/bin

# TeXLive
if [ -d /usr/local/texlive ]; then
    TEXLIVE=$(ls /usr/local/texlive | grep ".*[0-9]\{4\}")
    texlive_man_path=$TEXLIVE/texmf-dist/doc/man
    texlive_bin_path=$TEXLIVE/bin/x86_64-linux
    texlive_info_path=$TEXLIVE/texmf-dist/doc/info
fi

if [ -d ${texlive_man_path} ]
then
    export MANPATH=${MANPATH}:${texlive_man_path}
fi

if [ -d ${texlive_bin_path} ]
then
    export PATH=${PATH}:${texlive_bin_path}
fi

if [ -d ${texlive_info_path} ]
then
    export INFOPATH=${INFOPATH}:${texlive_info_path}
fi
#}
