{
    // common settings
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "window.menuBarVisibility": "toggle",
    "workbench.sideBar.location": "left",
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Solarized Dark",
    "editor.minimap.enabled": false
,

    /*
        vim settings
    */
    // Misc
    "vim.foldfix": true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,

    // Vim leader key
    "vim.leader": ",",
    
    // Insert mode key bindings
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["j","k"],
            "after": ["<Esc>"]
        },
        // <c-f> and <c-b> is binding to cursorRight and cursorLeft in
        // keybindings.json
    ],

    // Normal mode key bindings
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>","w"],
            "commands": [":w"]
        },
        {
            "before":["<leader>","i"],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before":["<leader>", "q"],
            "commands":[":q"]
        },
        {
            "before":["<leader>", "s", "j"],
            "commands":["workbench.action.splitEditorDown"]
        },
        {
            "before":["<leader>", "s", "k"],
            "commands":["workbench.action.splitEditorUp"]
        },
        {
            "before":["<leader>", "s", "h"],
            "commands":["workbench.action.splitEditorLeft"]
        },
        {
            "before":["<leader>", "s", "l"],
            "commands":["workbench.action.splitEditorRight"]
        },
        {
            "before":["<leader>", "b", "p"],
            "commands":["workbench.action.previousEditorInGroup"]
        },
        {
            "before":["<leader>", "b", "n"],
            "commands":["workbench.action.nextEditorInGroup"]
        },

        // move into another panes
        {
            "before":["<leader>", "c", "k"],
            "commands":["workbench.action.focusBelowGroup"]
        },
        {
            "before":["<leader>", "c", "j"],
            "commands":["workbench.action.focusAboveGroup"]
        },
        {
            "before":["<leader>", "c", "h"],
            "commands":["workbench.action.focusLeftGroup"]
        },
        {
            "before":["<leader>", "c", "l"],
            "commands":["workbench.action.focusRightGroup"]
        },
        {
            "before":["<leader>", "c", "o"],
            "commands":["workbench.action.closeEditorsInOtherGroups"]
        },

        // move cursor into errors
        {
            "before":["<leader>", "e", "n"],
            "commands":["editor.action.marker.nextInFiles"]
        },
        {
            "before":["<leader>", "e", "p"],
            "commands":["editor.action.marker.prevInFiles"]
        },

        // commands
        {
            "before":["ctrl", "p"],
            "commands":["workbench.action.showCommands"]
        }
    ],

    // Visual mode key binding
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["j", "k"],
            "after": ["<ecs>"]
        }
    ],

    "vim.handleKeys":{
        "<C-a>": false,
    },

    // TeX/LaTeX -- latex workshop
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.fdb_latexmk"
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.message.badbox.show": false,
    "latex-workshop.latex.recipes": [
        {
            "name": "pdftex",
            "tools": [
                "xetex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "pdftex",
            "command": "pdftex",
            "args": [
                "--synctex",
                "-file-line-error",
                "-interaction=nonstopmode",
                "%DOC%.tex"
            ]
        },
        {
            "name":"xetex",
            "command":"xetex",
            "args":[
                "-synctex",
                "-file-line-error",
                "-interaction=nonstopmode",
                "%DOC%.tex"
            ]
        },
        {
            "name":"pdflatex",
            "command":"pdflatex",
            "args":[
                "-synctex",
                "-file-line-error",
                "-interaction=nonstopmode",
                "%DOC%.tex"
            ]
        },
        {
            "name":"xelatex",
            "command":"xelatex",
            "args":[
                "-synctex",
                "-file-line-error",
                "-interaction=nonstopmode",
                "%DOC%.tex"
            ]
        },
        {
            "name":"latexmk",
            "command":"latexmk",
            "args":[
                "-pdf",
                "-file-line-error",
                "-interaction=nonstopmode",
                "-synctex",
                "%DOC%.tex"
            ]
        },
        {
            "name":"lualatex",
            "command":"lualatex",
            "args":[
                "-synctex",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%.tex"
            ]
        },
        {
            "name":"luatex",
            "command":"luatex",
            "args":[
                "-synctex",
                "-file-line-error",
                "-interaction=nonstopmode",
                "%DOC%.tex"
            ]

        }
    ]
}
